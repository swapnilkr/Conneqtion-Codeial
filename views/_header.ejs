<header id="layout-header">
    <nav>  
        <div class="mini-logo" id="app-name">    
            <p>
                <img  src="<%= assetPath('images/logo.jpg') %>">
                <a href="/">
                    NetNexus
                </a>
            </p>
        </div>
    
    <div class="auth-links" id="sign-links">
        <ul>
            <% if (locals.user){ %>
                <li>
                    <a href="/users/profile/<%= user.id %>">
                    <%= user.name %>
                    </a>
                </li>
                <li>    
                    <a href="/users/sign-out">Sign Out</a>
                </li>
            <% } else { %>
                <li>
                    <a href ="/users/sign-in">Sign IN</a>

                </li>
            
                <li>
                    <a href ="/users/sign-up">Sign Up</a>

                </li>

            <% } %>
        </ul>
    </div>
    </nav>


</header>
