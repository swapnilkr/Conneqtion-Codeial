<link rel="stylesheet" href="<%= assetPath('css/user_sign_up.css') %>">
<div class="ripple-background" style="z-index: -1;">
    <div class="circle xxlarge shade1"></div>
    <div class="circle xlarge shade2"></div>
    <div class="circle large shade3"></div>
    <div class="circle mediun shade4"></div>
    <div class="circle small shade5"></div>
  </div>
<div id="sign-up-page">



<form action="/users/create" method="POST">
    <h1>
        Sign Up
    </h1>

    <p id="google-sign-up">
        <a href="/users/auth/google"><img src="<%= assetPath('images/google.png') %>" height="30" width="30"><span>Sign Up with Google</span></a>
    </p>
    <input type="text" name="name" placeholder="Your Name" required>
    <input type="email" name="email" placeholder="Your Email" required>
    <input type="password" name="password" placeholder="Password" required>
    <input type="password" name="confirm_password" placeholder="Confirm Password" required>

    <input type="submit" value="Sign up">

    <p id="already-account">
        <span>Already have an account?</span> <br>
        <a href="/users/sign-in">Log In</a>
        <p>
</form>


</div>