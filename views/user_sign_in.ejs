<link rel="stylesheet" href="<%= assetPath('css/user_sign_in.css') %>">
<div class="ripple-background" style="z-index: -1;">
    <div class="circle xxlarge shade1"></div>
    <div class="circle xlarge shade2"></div>
    <div class="circle large shade3"></div>
    <div class="circle mediun shade4"></div>
    <div class="circle small shade5"></div>
</div>

<div id="sign-in-page">

    <div class="login-box">
        <h2>
            Sign In
        </h2>
        <form action="/users/create-session" method="POST">

            <div class="user-box">
                <input type="email" name="email" placeholder="Email" required>
            </div>
            <div class="user-box">
                <input type="password" name="password" placeholder="Password" required>
            </div>

            <div style="display: flex;">
                <div class='submit-btn'>
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                    <input type="submit" value="Sign In">
                </div>
                <p id="google-sign-in" class="button-86">
                    <a href="/users/auth/google"><span>
                            Login with Google</span></a>
                </p>
            </div>
                <p id="already-account">
                    <span>Don't have an account?</span>
                    <a href="/users/sign-up">Sign Up</a>
                <p>

        </form>

    </div>
</div>